/* pages/news/news.wxss */
.title{
  display: flex;
  justify-content: center;
  align-items:center;
  font-size: 20px;
  color:#13f50bf1;
}

.out{padding:10rpx;box-sizing: border-box;}
.row{display:flex;height: 150rpx;}
.pic{flex:2;}
.pic image{width:100%;height: 100%;}
.act_text{
  flex:8;border-bottom: 1px solid #eee;padding-left: 10rpx;display: flex;flex-direction: column;
  justify-content: space-between;
}
.act_mark{display: flex;flex-direction: row;}
.act_title{font-size:38rpx;}
.act_time{color:#999;flex:6;}
.act_looking{
  color:#999;flex:4;
}