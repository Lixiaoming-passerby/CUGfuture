/* pages/home/home.wxss */
.sp{
  height: 150px;
  border:1px solid rgb(217, 241, 81);
}
.sp image{
  height: 150px;
  width: 100%;
}
.spitem{
  padding:0 5px;
  box-sizing: border-box;
}
.hr{height: 10px;}

.mylogo{
  display:flex;
  flex-direction: row;
  height:50px;
  line-height: 60px;
  align-items: center;
}

.mylogo image{
  margin-left: 25px;
  margin-right: 25px;
  height:40px;
  width:20%;
}

.text{
  display:flex;
  flex-direction: row;
}

.stext{
  width:25%;
  margin-left: 20px;
  margin-right: 10px;
  font-size: 14px;
}

.stext2{
  width:25%;
  margin-left: 20px;
  margin-right: 10px;
  font-size: 14px;
}

.line{
  border:1px solid #0e010169;
  opacity: 0.4;
}
.activity{
  background-color: rgba(178, 227, 247, 0.767);
}
.title{
  padding-top: 5px;
  display: flex;
  justify-content: center;
  align-items:center;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color:#0f0f0ec5;
}

.out{padding:10rpx;box-sizing: border-box;}
.row{display:flex;height: 150rpx;}
.pic{flex:2;}
.pic image{width:100%;height: 100%;}
.act_text{
  flex:8;border-bottom: 1px solid #eee;padding-left: 10rpx;display: flex;flex-direction: column;
  justify-content: space-between;
}
.act_mark{display: flex;flex-direction: row;}
.act_title{font-size:38rpx;flex:8}
.act_time{color:#999;flex:8;}
.act_looking{
  color:#999;flex:2;
}
.over{
  font-size: 13px;
  font-weight: 600;
  padding-top:2px;
flex:2;
color:rgb(228, 48, 48);
}
.now{
  font-size: 13px;
  font-weight: 600;
  padding-top:2px;
flex:2;
color:rgb(34, 238, 27);
}
.begin{
  font-size: 13px;
  font-weight: 600;
  padding-top:2px;
flex:2;
color:#999;
}