<!--pages/register/register.wxml-->
<view class="content">
  <view class="hr"></view>
  <view class="mylogo">
  <image src="/logo/地大未来.png" style="width:100px;height:100px;"></image>
  </view>
  <view class="hr2"></view>
    <form bindsubmit="formSubmit" bindreset="formRest">
    <view class="bg">
      <view class="line"></view>
      <view class="item">
        <view class="name">账号</view>
        <view class="value">
    <input placeholder="手机号" name="name"></input>
        </view>
      </view>
      <view class="line"></view>
      <view class="item">
        <view class="name">密码</view>
        <view class="value">
    <input placeholder="请输入密码" name="password" password></input>
        </view>
    </view>
    <view class="line"></view>
    <view class="item">
      <view class="name">确认密码</view>
      <view class="value">
    <input placeholder="请确认密码" name="password_again" password></input>
        </view>
    </view>
    <view class="line"></view>
   
    </view>
   
    <button form-type="submit" class="btn">注册</button>
  </form>
  <view class="hr3"></view>
  <navigator class="miao" url="/pages/login/login">已有帐号登陆</navigator>
</view>
