/* pages/myindex/myindex.wxss */

.content{
  
  height: 600px;
}

.hr{
  height: 50px;
}
.hr2{
  height:40px;
}
.hr3{
  height:20px;
}
.mylogo{
  display: flex;
  justify-content: center;
  align-items:center;
}

.bg{
  width: 100%;
  height: 105px;
  background: #ffffff;
}

.item{
  display:flex;
  flex-direction: row;
  height:50px;
  line-height: 60px;
  align-items: center;
}

.name{
  width: 20%;
  margin-left: 10px;
  font-size: 16px;
  font-weight: bold;
}

.value{
  width:80%;
  line-height: 60px;
  margin-left: 10px;
  font-size: 16px;
}

.line{
  border:1px solid #cccccc;
  opacity: 0.2;
}

.btn{
  margin-top: 40px;
  background-color: #21d821d5;
  width: 94%;
  color: #ffffff;
}

.miao{
  text-decoration:underline;
  color:#a7a2ac98;
  width:80px;
  display: flex;
  justify-content: center;
  align-items:center;
  font-size:15px;
  margin: 0 auto;

}